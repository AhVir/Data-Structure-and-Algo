class Solution {
public:
    bool isPalindrome(string s) {
        vector<char> st;

        for(int i=0; i<s.length(); i++){
            // if(s[i] >= 'A' && s[i] <= 'Z'){
            //     char temp = s[i] + 32;
            //     st.push_back(temp);
            // }
            // else if(s[i] >= 'a' && s[i] <= 'z') st.push_back(s[i]);

            if (isalnum(s[i])) st.push_back(tolower(s[i])); 
        }

        // for(char x:st) cout << x << "-";
        // cout << endl;

        int len = st.size();
        for(int i=0; i<len/2; i++){
            if(st[i] != st[len-1-i]) return false;
        }


        return true;
    }
};
